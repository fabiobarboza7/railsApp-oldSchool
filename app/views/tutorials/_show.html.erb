<div class="row text-center">
  <div class="col-sm-12 px-0 px-sm-2">
    <div class="course-card mb-1 mb-sm-5">
      <p class="mt-3"><%= @tutorial.title %>
        <% if policy(Tutorial).edit? %>
          <%= link_to "[editar]", edit_tutorial_path(@tutorial), remote: true %></p>
        <% end %>
      <% if @tutorial.video? %>
        <% if @tutorial.video.include? 'vimeo' %>
          <iframe src="<%= @tutorial.video %>" width="100%" height="500" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        <% else %>
          <iframe width="100%" height="500" src="https://www.youtube.com/embed/<%=@tutorial.video.split('watch?v=').last if @tutorial.video %>" frameborder="0" allowfullscreen></iframe>
        <% end %>
      <% end %>
      <p class="my-2"><%= @tutorial.subtitle %></p>
      <br>
    </div>
  </div>
</div>
