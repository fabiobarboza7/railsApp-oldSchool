<div class="container mt-5">
	<div class="row">
		<div class="col-sm-12">
			<%= link_to "Cadastrar Turma", new_classroom_path %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<table class="table table-striped table-dark text-center" border="1">
				<thead>
					<tr>
					  <th scope="col">#ID</th>
					  <th scope="col">Turma</th>
					</tr>
				</thead>
				<tbody>
					<% @classrooms.each do |classroom| %>
						<tr>
							<th scope="row"><%= classroom.id %></th>
							<td>
								<%= link_to classroom_path(classroom) do %>
									<%= classroom.title %>
								<% end %>								
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>