<% content_for :sidebar do %>
  <div>
    <%= render "shared/navbar" %>
    <header class="banner-moodev d-flex justify-content-center align-items-center my-4">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 offset-sm-3">
            <h5 class="text-yellow text-center">Editar meus dados</h5>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-container' }) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :username, required: true, autofocus: true, label: "usuário" %>
                <%= f.input :first_name, required: true, autofocus: true, label: "nome" %>
                <%= f.input :last_name, required: true, autofocus: true, label: "sobrenome" %>
                <%#= f.input :age, required: true, autofocus: true, :order => [ :day, :month, :year], :start_year => Date.current.year, :end_year => 1920 %>
                <%= f.input :date_of_birth, as: :string, input_html: {type: :date}, label: "data de nascimento" %>
                <%= f.input :photo, required: true, autofocus: true, label: "foto" %>
                <%= f.input :photo_cache, as: :hidden %>
                <%= f.input :email, required: true, autofocus: true, label: "e-mail" %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Atualmente esperando confirmação para: <%= resource.unconfirmed_email %></p>
                <% end %>
                <%= f.input :password,
                            hint: "Deixe em branco se você não quer alterar a senha",
                            required: false,
                            input_html: { autocomplete: "new-password" }, label: "nova senha" %>
                <%= f.input :password_confirmation,
                            required: false,
                            input_html: { autocomplete: "new-password" }, label: "confirmação de senha" %>
                <%= f.input :current_password,
                            hint: "nós precisamos da sua senha atual para confirmar suas alterações",
                            required: true,
                            input_html: { autocomplete: "current-password" }, label: "senha atual" %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Atualizar", class: "btn btn-warning btn-block btn-lg text-white" %>
              </div>
              <div class="mt-4">
                <!-- <p><%#= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->
                <%#= link_to "Back", :back %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </header>
  </div>
<% end %>
