<div class="container mt-5">
	<div class="row">
		<div class="col-sm-12">
			<table class="table table-striped table-dark text-center" border="1">
				<thead>
					<tr>
					  <th scope="col">#ID</th>
					  <th scope="col">Usuário</th>
					  <th scope="col">Nome</th>
					  <th scope="col">Turma</th>
					  <th scope="col">Último Acesso</th>
					  <th scope="col">Numero de Acessos</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<th scope="row"><%= user.id %></th>

							<td>
								<%#= link_to edit_user_registration_path(user) do %>
									<%= user.username %>
								<%# end %>
							</td>
							<td><%= user.first_name %> <%= user.last_name %></td>
							<td></td>
							<td><%= user.last_sign_in_at&.strftime(" %d/%m/%Y - %H:%M") %></td>
					  		<% if user.sign_in_count == 0 %>
					  			<td class="text-danger"><%= user.sign_in_count %></td>
					  		<% else %>
					  			<td><%= user.sign_in_count %></td>
				  			<% end %>	
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>