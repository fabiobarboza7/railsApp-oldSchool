<div class="row p-0 p-sm-4 bg-grey rounded mt-5">
  <div class="col-sm-12 px-0 px-sm-2">
    <h2>Olá <%= current_user.first_name.capitalize %>!</h2>
    <p>Está é a matéria de <%= @subject.title %>, vamos aprender muitas coisas legais! Não deixe de praticar e fazer os quiz para ganhar posições no ranking!</p>
  </div>
</div>
<section id="courses">
  <div class="row p-0 p-sm-4 bg-grey rounded mt-5">
    <div class="col-sm-12 text-center mb-5 mt-4 px-0 px-sm-5">
      <h4>Lições</h4>
    </div>
    <div class="col-sm-12 ">
      <% @lessons.in_groups_of(3, false).each do |group| %>
        <div class="row text-center">
          <% group.each do |lesson| %>
            <%= link_to  course_subject_lesson_path(lesson.subject.course_id, lesson.subject_id, lesson), remote: true do %>
              <div class="col-sm-4 px-0 px-sm-5">
                <div class="lesson-card mb-5 bg-white blog-card pt-2">
                  <p class="my-2"><%= lesson.title %></p>
                  <div class="horizontal-line"></div>
                  <p class="mb-0 p-2 p-link"><%= link_to 'Fazer Lição', course_subject_lesson_path(lesson.subject.course_id, lesson.subject_id, lesson), class: 'text-blue', remote: true %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

