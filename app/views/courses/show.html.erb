<% content_for(:title_tag) do %>
  <%= @course.title %>
<% end %>
<% content_for :meta_title, "Curso - #{@course.title}" %>
<% content_for :meta_description, @course.content %>
<% content_for :meta_image, cloudinary_url(@course.photo, :secure => true) %>
<header>
  <div class="container">
    <div class="row course-card my-5 bg-darkblue">
      <div class="col-12 col-sm-10 offset-sm-1 d-sm-flex justify-content-between align-items-center py-4">
        <%= cl_image_tag(@course.photo, :secure => true, :width => 300, class: 'img-fluid img-thumbnail mx-auto d-block') %>
        <h3 class="flex-grow-1 text-center mt-sm-0 mt-2 text-white"><%= @course.title %></h3>
      </div>
      <div class="horizontal-line"></div>
      <div class="col-sm-12 bg-grey">
        <div class="col-12 col-sm-10 offset-sm-1 mt-5 text-darkblue">
          <p class="course-txt-header">DESCRIÇÃO DO CURSO</p>
          <p class="pl-4"><%= @course.content %></p>
          <p class="course-txt-header">DURAÇÃO</p>
          <p class="pl-4"><%= @course.duration %></p>
          <!-- <p class="course-txt-header">INVESTIMENTO</p>
          <p class="pl-4">R$<%#= @course.price %>,00</p> -->
        </div>
      </div>
    </div>
  </div>
</header>
<section>
  <div class="container">
    <div class="row course-card my-5 bg-darkblue">
      <div class="col-sm-6 offset-sm-3">
        <p class="mt-3 course-txt-header text-center">Inscreva-se</p>
        <%= simple_form_for @contact, html: { class: "form-container no-borders"} do |f| %>
          <% if user_signed_in? %>
            <%= f.input :name, placeholder: "Digite o seu nome", input_html: {value: current_user.first_name}, as: :hidden %>
            <%= f.input :email, placeholder: "Digite seu e-mail", input_html: {value: current_user.email}, as: :hidden %>
          <% else %>
            <%= f.input :name, placeholder: "Digite o seu nome" %>
            <%= f.input :email, placeholder: "Digite o seu e-mail" %>
          <% end %>
          <%= f.input :phone, label: "Telefone", placeholder: "Digite o seu telefone" %>
          <%= f.input :message, as: :text, label: "Mensagem", placeholder: "Digite sua mensagem" %>
          <%= f.submit "Enviar", class: 'btn btn-pink btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</section>