<div class="container mt-5">
	<div class="row">
		<div class="col-sm-12">
			<table class="table table-striped table-dark text-center" border="1">
				<thead>
					<tr>
					  
					  <th scope="col">Pagar</th>
					  <th scope="col">m$ para receber</th>
					  <th scope="col">Usu√°rio</th>
					  <th scope="col">Nome</th>
					  <th scope="col">Data da Troca</th>
					</tr>
				</thead>
				<tbody>
					<% @exchanges.each do |exc| %>
						<tr>
							<td>
								<%= link_to exchange_path(exc), :method=> :put  do %>
									<% if exc.status != true %>
										<i class="fas fa-times-circle text-warning"></i>
									<% else %>
										<i class="fas fa-check-circle text-success"></i>
									<% end %>
								<% end %>
							</td>
							<td><%= exc.sale.value %></td>
							<td><%= exc.user.username %></td>
							<td><%= exc.user.first_name %> <%= exc.user.last_name %></td>
							<td><%= exc.created_at.strftime('%d/%m/%Y as %T') %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>