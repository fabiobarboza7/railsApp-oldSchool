      </div>
    </div>
  </div>
</section>
<section id="courses">
  <div class="container-fluid bg-grey">
    <div class="row p-0 p-sm-4">
      <div class="col-sm-12 text-center mb-5 mt-4 px-0 px-sm-5">
        <h4>CURSOS</h4>
      </div>
      <div class="col-sm-12 ">
        <% @courses.in_groups_of(3, false).each do |group| %>
          <div class="row text-center">
            <% group.each do |course| %>
              <div class="col-sm-4 px-0 px-sm-5">
                <div class="course-card mb-5">
                  <img style="background: url(<%= cloudinary_url(course.photo, :secure => true)  %>);width:100%;height: 200px;background-size: cover;background-repeat: no-repeat; background-position: 50% 50%;")>
                  <p class="my-2"><%= course.title %></p>
                  <p class="my-2"><%= course.duration %></p>
                  <div class="horizontal-line"></div>
                  <p class="mb-0 p-2 p-link"><%= link_to 'SAIBA MAIS', course_path(course), class: 'text-blue' %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<section id="contact">
  <div class="container-fluid bg-white">
    <div class="row p-0 p-sm-4">
      <div class="col-sm-12 text-center mb-5 mt-4 px-0 px-sm-5">
        <h4>Dúvidas? Fale conosco!</h4>
      </div>
      <div class="col-sm-6 px-0 px-sm-2">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3392.295655075927!2d-52.344211985157976!3d-31.76242118129023!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9511b5a058edbe45%3A0x9f664b13c299f0f5!2sMooDev+-+Escola+de+Ci%C3%AAncia+da+Computa%C3%A7%C3%A3o+e+Rob%C3%B3tica+para+Crian%C3%A7as+e+Adolescentes!5e0!3m2!1spt-BR!2sbr!4v1537936883023" width="100%" height="470" frameborder="0" style="border:0;" allowfullscreen>
        </iframe>
      </div>
      <div class="col-sm-6 px-0 px-sm-2 mb-3">
        <%= simple_form_for @contact, html: { class: "form-container no-borders"} do |f| %>
          <%= f.input :name, label: "Nome", placeholder: "Digite o seu nome" %>
          <%= f.input :email, label: "E-mail", placeholder: "Digite seu e-mail" %>
          <%= f.input :phone, label: "Telefone", placeholder: "Digite se telefone" %>
          <%= f.input :message, as: :text, label: "Mensagem", placeholder: "Digite sua mensagem" %>
          <%= f.submit "Enviar", class: 'btn btn-pink btn-xs-block' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
