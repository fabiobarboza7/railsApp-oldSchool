<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <h3 class="text-center">Cadastrar Matrícula</h3>
    <%= simple_form_for @enrollment, html: { class: "form-container"} do |f| %>
      <%= f.association :user, label: 'Usuário', label_method: :user_data %>
      <%= f.association :course, label: 'Curso' %>
      <%= f.association :classroom, label: 'Turma' %>
      <%= f.submit 'Cadastrar Matrícula', class: 'btn btn-info' %>
    <% end %>
  </div>
</div>

