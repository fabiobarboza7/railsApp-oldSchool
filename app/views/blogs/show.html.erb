<% content_for(:title_tag) do %>
  <%= @blog.title %>
<% end %>
<% content_for :meta_title, "Blog - #{@blog.title}" %>
<% content_for :meta_description, @blog.content %>
<% content_for :meta_image, cloudinary_url(@blog.photo, :secure => true) %>
<header>
  <div class="container">
    <div class="row course-card my-5 bg-darkblue">
      <div class="col-12 col-sm-10 offset-sm-1 d-sm-flex justify-content-between align-items-center py-4">
        <%= cl_image_tag(@blog.photo, :secure => true, :width => 300, class: 'img-fluid img-thumbnail mx-auto d-block') %>
        <h3 class="flex-grow-1 text-center mt-sm-0 mt-2 text-white"><%= @blog.title %>
          <% if current_user.admin? %>
             <%= link_to "editar", edit_blog_path(@blog), class: "text-danger" %>
          <% end %>
        </h3>
      </div>
      <div class="horizontal-line"></div>
      <div class="col-sm-12 bg-grey">
        <div class="col-12 col-sm-10 offset-sm-1 mt-5 text-darkblue">
          <div class="pl-4 text-justify"><%= (@blog.content).gsub(/\n/, '<br>').html_safe %></div>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container-fluid bg-dark mb-5">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-12 col-sm-6 text-center">
      <h2 class="text-white mt-5 mt-sm-0">Dê o primeiro passo !</h2>
      <p class="text-white">Faça uma aula experimental gratuita, é rápido e sem compromisso!</p>

      <%= link_to "Aula Grátis", aula_gratis_path, class: "btn btn-block btn-danger text-yellow"%>
    </div>
    <div class="col-xs-12 col-sm-6 text-center">
      <%= cl_image_tag("https://res.cloudinary.com/dr4xmxoal/image/upload/c_scale,w_609/v1501782763/moodev-programac%CC%A7a%CC%83o_hmkzwz.png", class: "img-fluid mx-auto d-block rounded m-5") %>
    </div>
  </div>
</div>
