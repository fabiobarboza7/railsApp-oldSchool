<% content_for(:title_tag) do %>
  Editar Blog
<% end %>
<header class="banner-moodev d-flex justify-content-center align-items-center my-4">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <% if current_user.admin? %>
          <p>Usar tags html para adicionar efeitos</p>
          <ul>
            <li>User <%=h "<p><h1><h2><h3><h4><h5><h6><img src=""> etc.. para estilizar " %></li>
          </ul>
        <% end %>
        <%= simple_form_for @blog, html: { class: "form-container"} do |f| %>
          <%= f.input :title, label: "Titulo", placeholder: "Digite o titulo da publicacão" %>
          <%= f.input :content, label: "Conteúdo", as: :text, placeholder: "Digite o texto da publicacão" %>
          <%= f.input :photo, label: "Foto" %>
          <%= f.input :photo_cache, as: :hidden %>

          <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <%= f.submit "Editar Blog", class: 'btn bg-yellow mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</header>
